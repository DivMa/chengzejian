.layout {
  height: 100%;
  width:100%;
  background: #e6e6e6;
  position: relative;
}

.content{
  width: 100%;
  height: 420px;
  position: relative;
}
.content image{
  width: 100%;
  height: 100%;
  z-index: 0;
}
.header{
  position: absolute;
  top: 5px;
  width: 20%;
  height: 40px;
  line-height: 40px;
  text-align: center; 
  color: #fff;
  left: 40%;
  font-size: 16px;
}
.header image{
  margin-top: 11px;
  width: 16px;
  height: 16px;
  float: left;
  background-size: 16px 16px;
}

.pm{
  width: 35px;
  height: 40px;
  background: pink;
  border-radius: 5px;
  position: absolute;
  color: #fff;
  top: 40px;
